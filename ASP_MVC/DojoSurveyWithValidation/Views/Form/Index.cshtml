@{
    ViewData["Title"] = "Survey";
}
@model Survey
<form action="process" method="post">
        <div class="d-flex">
            <label asp-for="Name">Your Name:</label>
            <input asp-for="Name">
        </div>
            <span asp-validation-for="Name" class="error"></span>
        <div class="d-flex">
            <label asp-for="Location">Dojo Location:</label>
            <select asp-for="Location" id="Location">
                <option value="San Jose">San Jose</option>
                <option value="San Fransisco">San Fransisco</option>
            </select>
        </div>
            <span asp-validation-for="Location" class="error"></span>
        <div class="d-flex">
            <label asp-for="FavoriteLanguage">Favorite Language:</label>
            <select asp-for="FavoriteLanguage" id="FavoriteLanguage">
                <option value="C#">C#</option>
                <option value="Javascript">Javascript</option>
                <option value="Python">Python</option>
            </select>
        </div>
            <span asp-validation-for="FavoriteLanguage" class="error"></span>
        <div class="flex-col">
            <label asp-for="Comment">Comment (Optional):</label>
            <textarea asp-for="Comment" id="Comment" cols="30" rows="5"></textarea>
        </div>
            <span asp-validation-for="Comment" class="error"></span>
        <button>Submit</button>
    </form>   
